@model List<ResultWorkLocationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Lokasyon Adı</th>
        <th>Lokasyon Şehri</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.WorkLocationID</td>
            <td>@item.WorkLocationName</td>
            <td>@item.WorkLocationCityName</td>
            <td><a href="/WorkLocation/DeleteWorkLocation/@item.WorkLocationID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/WorkLocation/UpdateWorkLocation/@item.WorkLocationID" class="btn btn-outline-dark">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/WorkLocation/AddWorkLocation/" class="btn btn-info">Yeni Lokasyon Girişi</a>


